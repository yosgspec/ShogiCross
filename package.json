{
  "name": "shogicross",
  "version": "0.16.0",
  "description": "様々な将棋類の駒を並べるだけの将棋盤のようなツール",
  "main": "./src/dist/ShogiCross.js",
  "bin": {
    "shogicross": "cli/shogicross"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yosgspec/ShogiCross.git"
  },
  "keywords": [
    "HTML",
    "Canvas",
    "Shogi",
    "Chess",
    "Xiangqi",
    "Janggi",
    "Makruk"
  ],
  "files": [
    "shogicross",
    "src/dist/",
    "!src/dist/ShogiCross/*",
    "!src/dist/ShogiCross/*iife*.js",
    "!src/dist/ShogiCross/*min.js"
  ],
  "author": "YOS G-spec",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/yosgspec/ShogiCross/issues"
  },
  "homepage": "https://github.com/yosgspec/ShogiCross#readme",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:vite": "npx vite",
    "dev:server": "npm run dev --workspace server",
    "start": "npm run start --workspace server",
    "sharp-all": "npx sharp -i ./**/*.png -f png -o {dir} ",
    "publish": "node run/npmPublish.js",
    "build": "run-s build-main:* package deploy:doc-api built",
    "build-main": "run-p build-main:*",
    "build-main:module": "run-s setup compile stage minify",
    "build-main:font": "npm run build --workspace font",
    "setup": "run-p setup:*",
    "setup:crean": "npx shx rm -rf ./src/dist",
    "setup:zip-paper": "node run/zip.js ./paper ./src/paper.zip",
    "setup:doc-md2html": "node run/md2html.js ./doc ./src/pages/md",
    "setup:doc-update-cdn": "node run/updateCdnUrl.js ./src",
    "compile": "run-p compile:*",
    "compile:vite": "npx vite build",
    "compile:vite-nojson": "npx vite build --mode nojson",
    "stage": "run-p stage:*",
    "stage:copy-sample": "npx shx cp -r ./src/sample/* ./src/dist/",
    "stage:copy-source": "npx shx cp -r ./src/ShogiCross ./src/dist/",
    "stage:move-vite": "node run/moveVite.js ./dist ./src/dist",
    "minify": "run-p minify:*",
    "minify:module": "node run/minifyLib.js ./src/dist",
    "minify:sharp": "npx sharp -i ./src/dist/img/**/*.png -f png -o {dir} ",
    "package": "run-p package:*",
    "package:zip-dist": "node run/zip.js ./src/dist ./src/ShogiCross.zip",
    "package:dts": "npx tsc",
    "package:app-stage": "npm run stage --workspace app",
    "deploy": "run-p deploy:*",
    "deploy:cdn": "mkdir -p cdn && npx shx cp src/dist/*.{js,ts,map} cdn/",
    "deploy:doc-api": "npx typedoc --entryPointStrategy expand ./src/dist/ShogiCross --exclude **/*.js --out ./src/doc/api",
    "built": "echo Build completed successfully!"
  },
  "workspaces": [
    "server",
    "font",
    "app"
  ],
  "devDependencies": {
    "adm-zip": "^0.5.12",
    "icon-gen": "^5.0.0",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "sharp-cli": "^5.2.0",
    "shx": "^0.4.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.2",
    "vite": "^7.1.4"
  }
}
