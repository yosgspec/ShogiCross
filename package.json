{
  "name": "shogicross",
  "version": "0.12.3",
  "description": "様々な将棋類の駒を並べるだけの将棋盤のようなツール",
  "main": "./src/dist/ShogiCross.js",
  "bin": {
    "shogicross": "cli/shogicross"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yosgspec/ShogiCross.git"
  },
  "keywords": [
    "HTML",
    "Canvas",
    "Shogi",
    "Chess",
    "Xiangqi",
    "Janggi",
    "Makruk"
  ],
  "files": [
    "shogicross",
    "src/dist/",
    "!src/dist/ShogiCross/*",
    "!src/dist/ShogiCross/*iife*.js",
    "!src/dist/ShogiCross/*min.js"
  ],
  "author": "YOS G-spec",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/yosgspec/ShogiCross/issues"
  },
  "homepage": "https://github.com/yosgspec/ShogiCross#readme",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "sharp-all": "npx sharp -i ./**/*.png -f png -o {dir} ",
    "publish": "node run/npmPublish.js",
    "build": "run-s setup building collect minify post deploy:doc-api built",
    "setup": "run-p setup:*",
    "setup:crean": "npx shx rm -rf ./src/dist",
    "setup:doc-md2html": "node run/md2html.js ./doc ./src/pages/md",
    "setup:zip-paper": "node run/zip.js ./paper ./src/paper.zip",
    "building": "run-p building:*",
    "building:vite": "npx vite build",
    "building:vite-nojson": "npx vite build --mode nojson",
    "collect": "run-p collect:*",
    "collect:copy-sample": "npx shx cp -r ./src/sample/* ./src/dist/",
    "collect:copy-source": "npx shx cp -r ./src/ShogiCross ./src/dist/",
    "collect:move-vite": "node run/moveVite.js ./dist ./src/dist",
    "minify": "run-p minify:*",
    "minify:module": "node run/minifyLib.js ./src/dist",
    "minify:sharp": "npx sharp -i ./src/dist/img/**/*.png -f png -o {dir} ",
    "post": "run-p post:*",
    "post:zip-dist": "node run/zip.js ./src/dist ./src/ShogiCross.zip",
    "post:dts": "npx tsc",
    "deploy": "run-p deploy:*",
    "deploy:cdn": "mkdir -p cdn && npx shx cp src/dist/*.{js,ts,map} cdn/",
    "deploy:doc-api": "npx typedoc --entryPointStrategy expand ./src/dist/ShogiCross --exclude **/*.js --out ./src/doc/api",
    "built": "echo Build completed successfully!"
  },
  "devDependencies": {
    "adm-zip": "^0.5.12",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "sharp-cli": "^5.2.0",
    "shx": "^0.4.0",
    "typedoc": "0.25.13",
    "typescript": "^5.4.2",
    "vite": "^7.1.2"
  }
}
