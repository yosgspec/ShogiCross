{
  "name": "shogicross",
  "version": "0.1.10",
  "description": "様々な将棋類の駒を並べるだけの将棋盤のようなツール",
  "main": "./src/dist/ShogiCross.js",
  "bin": {
    "shogicloss-init": "shogicloss-init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yosgspec/ShogiCross.git"
  },
  "keywords": [
    "HTML",
    "Canvas",
    "Shogi",
    "Chess",
    "Xiangqi",
    "Janggi",
    "Makruk"
  ],
  "files": [
    "shogicross-init",
    "src/dist/",
    "!src/dist/ShogiCross/*",
    "!src/dist/*.g.js",
    "!src/dist/*.min.js"
  ],
  "author": "YOS G-spec",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/yosgspec/ShogiCross/issues"
  },
  "homepage": "https://github.com/yosgspec/ShogiCross#readme",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "build": "run-s build:*",
    "build:vite": "npx vite build",
    "build:after": "node buildAfter.js ./dist/ShogiCross",
    "build:dts": "npx tsc",
    "build:sharp": "npx sharp -i ./src/img/**/*.png -f png -o {dir} ",
    "build:api": "npx documentation build ./src/ShogiCross/lib.js -f html -o ./src/doc/api"
  },
  "devDependencies": {
    "adm-zip": "^0.5.12",
    "npm-run-all": "^4.1.5",
    "sharp-cli": "^4.2.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5"
  }
}
