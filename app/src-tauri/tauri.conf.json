{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shogicross-app",
  "version": "0.1.0",
  "identifier": "com.yosgspec.shogicross",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ShogiCross App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "app"],
    "icon": [
      "icons/app.ico",
      "icons/app.icns",
      "icons/app128.png"
    ]
  }
}
